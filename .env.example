# OJS Backend Kafka - Environment Variables
# Copy to .env and adjust values as needed.

# Server
OJS_PORT=8080

# gRPC
OJS_GRPC_PORT=9090

# Kafka (comma-separated broker list)
KAFKA_BROKERS=localhost:9092

# Redis (used as state store alongside Kafka)
REDIS_URL=redis://localhost:6379

# Kafka Options
OJS_KAFKA_USE_QUEUE_KEY=false
OJS_KAFKA_EVENTS_ENABLED=true
